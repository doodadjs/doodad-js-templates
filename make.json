	"makeData": {
		"tasks": {
			"make": {
				"operations": [
					{
						"class": "Make.File.Javascript",
						"source": "%SOURCEDIR%/common/Templates_Html.js",
						"destination": "%PACKAGEDIR%/Templates_Html.min.js",
						"runDirectives": true
					},
					{
						"class": "Make.File.Javascript",
						"source": "%SOURCEDIR%/common/index.js",
						"destination": "%PACKAGEDIR%/index.js",
						"runDirectives": true
					},
					{
						"class": "Make.File.Javascript",
						"source": "%SOURCEDIR%/browserify/browserify.js",
						"destination": "%PACKAGEDIR%/browserify.js",
						"runDirectives": true
					},
					{
						"class": "Make.Folder.Copy",
						"source": "%SOURCEDIR%/common/res",
						"destination": "%PACKAGEDIR%/res"
					},
					
					{
						"class": "Make.Update.PackageJson"
					},
					
					{
						"class": "Make.Task",
						"name": "configure"
					}
				]
			},
			"configure": {
				"operations": [
					{
						"class": "Make.Folder.Create",
						"destination": "%INSTALLDIR%/"
					},
					{
						"class": "Make.Folder.Create",
						"destination": "%INSTALLDIR%/%PACKAGENAME%/"
					},
					{
						"class": "Make.File.Copy",
						"source": "%SOURCEDIR%/common/Templates_Html.js",
						"destination": "%INSTALLDIR%/%PACKAGENAME%/Templates_Html.js"
					},
					{
						"class": "Make.File.Javascript",
						"source": "%SOURCEDIR%/common/Templates_Html.js",
						"destination": "%INSTALLDIR%/%PACKAGENAME%/Templates_Html.min.js",
						"runDirectives": true
					},
					{
						"class": "Make.Folder.Copy",
						"source": "%SOURCEDIR%/common/res",
						"destination": "%INSTALLDIR%/%PACKAGENAME%/res"
					},
					{
						"class": "Make.File.Copy",
						"source": "%SOURCEDIR%/LICENSE",
						"destination": "%INSTALLDIR%/%PACKAGENAME%/LICENSE"
					},
					{
						"class": "Make.Generate.Configuration",
						"destination": "%INSTALLDIR%/%PACKAGENAME%/config.json"
					},
					{
						"class": "Make.File.Javascript",
						"source": "%SOURCEDIR%/common/index.js",
						"destination": "%INSTALLDIR%/%PACKAGENAME%/index.js",
						"runDirectives": true
					},
					
					{
						"class": "Make.Generate.Configuration",
						"destination": "%PACKAGEDIR%/config.json"
					},

					{
						"class": "Make.Task",
						"name": "browserify"
					}
				]
			},
			"browserify": {
				"operations": [
					{
						"class": "Make.Folder.Create",
						"destination": "%PACKAGEDIR%/browserify/"
					},
					{
						"class": "Make.Browserify.Resources",
						"name": "%PACKAGENAME%-res",
						"namespace": "Doodad.Templates.Html",
						"source": "%SOURCEDIR%/common/res/",
						"destination": "%PACKAGEDIR%/browserify/",
						"resourcesFile": "resources.js"
					}
				]
			}
		}
	}
}